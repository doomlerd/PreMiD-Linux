{
  "name": "premid",
  "productName": "PreMiD",
  "author": "Timeraa",
  "description": "Discord Rich Presence for web services.",
  "version": "2.1.1",
  "repository": "https://github.com/PreMiD/PreMiD",
  "license": "MIT",
  "scripts": {
    "init": "tsc && devScript --copyOnly",
    "start": "npm run init && electron dist/app/.",
    "dev": "devScript",
    "dist": "rimraf dist && tsc && devScript --copyOnly && cd dist/app/ && npm i",
    "build": "electron-builder --project ./dist/app/",
    "build:appimage": "electron-builder --project ./dist/app/ build -l AppImage --x64 -p onTagOrDraft",
    "build:n-appimage": "electron-builder --project ./dist/app/ build -l AppImage --x64 -p never"
  },
  "build": {
    "appId": "com.PreMiD.app",
    "copyright": "PreMiD Org",
    "linux": {
      "maintainer": "DooMLorD#2792",
      "category": "Utility",
      "artifactName": "${productName}.${ext}",
      "target": [
        "zip"
      ],
      "icon": "../../installer_assets/appIcon.icns"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "doomlerd",
        "repo": "PreMiD-Linux",
        "vPrefixedTagName": true,
        "releaseType": "release"
      }
    ]
  },
  "devDependencies": {
    "@timeraa/devscript": "Timeraa/DevScript",
    "@types/auto-launch": "5.0.1",
    "@types/discord-rpc": "3.0.2",
    "@types/node": "13.7.1",
    "@types/rimraf": "2.0.3",
    "@types/socket.io": "2.1.4",
    "electron": "8.0.1",
    "electron-builder": "22.3.2",
    "rimraf": "3.0.2",
    "typescript": "3.7.5"
  },
  "dependencies": {
    "auto-launch": "5.0.5",
    "discord-rpc": "github:discordjs/RPC",
    "electron-store": "5.1.0",
    "electron-updater": "4.2.0",
    "socket.io": "2.3.0"
  }
}
